@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-person-plus"></i> Create New Employee</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Document" class="form-label">Document *</label>
                                    <input asp-for="Document" class="form-control" required />
                                    <span asp-validation-for="Document" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">First Name *</label>
                                    <input asp-for="FirstName" class="form-control" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Last Name *</label>
                                    <input asp-for="LastName" class="form-control" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email *</label>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label">Phone</label>
                                    <input asp-for="Phone" class="form-control" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label">Address</label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="BirthDate" class="form-label">Birth Date</label>
                                    <input asp-for="BirthDate" type="date" class="form-control" />
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Salary" class="form-label">Salary</label>
                                    <input asp-for="Salary" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PositionId" class="form-label">Position *</label>
                                    <select asp-for="PositionId" class="form-select" required>
                                        <option value="">Select Position</option>
                                        @foreach (var position in ViewBag.Positions)
                                        {
                                            <option value="@position.Id">@position.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="PositionId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="DepartmentId" class="form-label">Department *</label>
                                    <select asp-for="DepartmentId" class="form-select" required>
                                        <option value="">Select Department</option>
                                        @foreach (var department in ViewBag.Departments)
                                        {
                                            <option value="@department.Id">@department.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EmployeeStatusId" class="form-label">Status *</label>
                                    <select asp-for="EmployeeStatusId" class="form-select" required>
                                        <option value="">Select Status</option>
                                        @foreach (var status in ViewBag.EmployeeStatuses)
                                        {
                                            <option value="@status.Id">@status.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="EmployeeStatusId" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="EducationLevelId" class="form-label">Education Level</label>
                                    <select asp-for="EducationLevelId" class="form-select">
                                        <option value="">Select Education Level</option>
                                        @foreach (var education in ViewBag.EducationLevels)
                                        {
                                            <option value="@education.Id">@education.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="EducationLevelId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ProfessionalProfile" class="form-label">Professional Profile</label>
                            <textarea asp-for="ProfessionalProfile" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ProfessionalProfile" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Employee
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
