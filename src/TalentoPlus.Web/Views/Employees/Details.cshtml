@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="bi bi-person-badge"></i> Employee Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Document:</dt>
                        <dd class="col-sm-9">@Model.Document</dd>
                        
                        <dt class="col-sm-3">Full Name:</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        
                        <dt class="col-sm-3">Phone:</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>
                        
                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>
                        
                        <dt class="col-sm-3">Birth Date:</dt>
                        <dd class="col-sm-9">@Model.BirthDate.ToString("yyyy-MM-dd")</dd>
                        
                        <dt class="col-sm-3">Salary:</dt>
                        <dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
                        
                        <dt class="col-sm-3">Hire Date:</dt>
                        <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
                        
                        <dt class="col-sm-3">Professional Profile:</dt>
                        <dd class="col-sm-9">@Model.ProfessionalProfile</dd>
                        
                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.IsEnabled ? "success" : "secondary")">
                                @(Model.IsEnabled ? "Active" : "Inactive")
                            </span>
                        </dd>
                        
                        <dt class="col-sm-3">Registration Date:</dt>
                        <dd class="col-sm-9">@Model.RegistrationDate.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning me-2">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
