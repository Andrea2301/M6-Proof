@model IEnumerable<TalentoPlus.Core.Entities.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Employees</h1>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Add Employee
            </a>
            <a href="@Url.Action("Index", "Import")" class="btn btn-success">
                <i class="bi bi-upload"></i> Import Excel/CSV
            </a>
        </div>
    </div>

    <!-- Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Employee Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Document</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.Document</td>
                                    <td>@employee.FirstName @employee.LastName</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.Phone</td>
                                    <td>@(employee.Department?.Name ?? "N/A")</td>
                                    <td>
                                        <span class="badge bg-@(employee.IsEnabled ? "success" : "secondary")">
                                            @(employee.IsEnabled ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", new { id = employee.Id })" 
                                               class="btn btn-sm btn-info" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = employee.Id })" 
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = employee.Id })" 
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <h3 class="mt-3">No Employees Found</h3>
                    <p class="text-muted">Get started by adding your first employee or importing from Excel/CSV.</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Create")" class="btn btn-primary me-2">
                            <i class="bi bi-plus-circle"></i> Add First Employee
                        </a>
                        <a href="@Url.Action("Index", "Import")" class="btn btn-success">
                            <i class="bi bi-upload"></i> Import from File
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
