@model TalentoPlus.Core.Entities.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Employee</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this employee?</h5>
                        <p class="mb-0">This action cannot be undone.</p>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Document:</dt>
                        <dd class="col-sm-8">@Model.Document</dd>
                        
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
                        
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
