@{
    ViewData["Title"] = "Import Employees";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-upload"></i> Import Employees</h3>
                </div>
                <div class="card-body">
                    
                    <!-- Messages -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    @if (TempData["Warning"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Upload Form -->
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label">Select File</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".xlsx,.xls,.csv" required>
                            <div class="form-text">
                                Supported formats: Excel (.xlsx, .xls) or CSV (.csv)
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="fileType" class="form-label">File Type</label>
                            <select class="form-select" id="fileType" name="fileType" required>
                                <option value="">-- Select File Type --</option>
                                <option value="xlsx">Excel File (.xlsx, .xls)</option>
                                <option value="csv">CSV File (.csv)</option>
                            </select>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary me-md-2">
                                <i class="bi bi-upload"></i> Import File
                            </button>
                            <a href="@Url.Action("Index", "Employees")" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Employees
                            </a>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <!-- Templates -->
                    <h5><i class="bi bi-download"></i> Download Templates</h5>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="bi bi-file-earmark-excel display-4 text-success"></i>
                                    <h5 class="mt-2">Excel Template</h5>
                                    <p>Includes formatting and sample data</p>
                                    <a href="@Url.Action("DownloadTemplate", "Import", new { type = "xlsx" })" 
                                       class="btn btn-success btn-sm">
                                        <i class="bi bi-download"></i> Download .xlsx
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="bi bi-file-earmark-text display-4 text-info"></i>
                                    <h5 class="mt-2">CSV Template</h5>
                                    <p>Simple comma-separated format</p>
                                    <a href="@Url.Action("DownloadTemplate", "Import", new { type = "csv" })" 
                                       class="btn btn-info btn-sm">
                                        <i class="bi bi-download"></i> Download .csv
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Instructions -->
                    <div class="alert alert-info mt-4">
                        <h5><i class="bi bi-info-circle"></i> Import Instructions</h5>
                        <ul class="mb-0">
                            <li><strong>Required columns:</strong> Document, FirstName, LastName, Email</li>
                            <li><strong>Optional columns:</strong> Phone, Address, BirthDate, Salary, HireDate, ProfessionalProfile</li>
                            <li><strong>Date format:</strong> YYYY-MM-DD (e.g., 2024-01-15)</li>
                            <li><strong>For Excel:</strong> Use the first sheet. Headers must be in first row.</li>
                            <li><strong>For CSV:</strong> Use UTF-8 encoding. Text with commas should be quoted.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
